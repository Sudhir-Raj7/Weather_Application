<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!--TODO why is your constraintlayout inside framelayout

The ConstraintLayout is inside the FrameLayout because the FrameLayout serves as
the root layout container for the XML file.
    -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sunnybgg">

        <!--        TODO always use snake casing //okay will take care-->
        <!--        TODO proper naming of ids //okay will take care -->

        <!--TODO use dimens file for all the margins and padding //done-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="@dimen/lottie_width"
            android:layout_height="@dimen/lottie_height"
            android:layout_marginStart="@dimen/lottie_marginSt"
            android:layout_marginTop="@dimen/lottie_margin_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/sunny" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_margin_top"

            android:drawableLeft="@drawable/locationicon"
            android:drawablePadding="@dimen/textview_dpadding"
            android:fontFamily="@font/merriweathersans_bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview3_margin_top"
            android:fontFamily="@font/merriweathersans_bold"
            android:text="Today"
            android:textColor="@color/white"
            android:textSize="@dimen/textview3_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.675"
            app:layout_constraintStart_toEndOf="@+id/lottieAnimationView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="00:00 °C"
            android:textColor="@color/white"
            android:textSize="@dimen/temp_textSize"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/merriweathersans_bold"
            android:text="SUNNY"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textview4_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview5_margin_top"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="High : 00:00 °C"
            android:textColor="@color/white"
            android:textSize="@dimen/textview5_textSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview6_margin_top"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="Low : 00:00 °C"

            android:textColor="@color/white"
            android:textSize="@dimen/textview6_textSize"
            app:layout_constraintEnd_toEndOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview7_margin_top"
            android:fontFamily="@font/merriweathersans_bold"
            android:text="Tuesday"
            android:textColor="@color/white"
            android:textSize="@dimen/textview7_textSize"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <!--        TODO no hardcoded strings in layouts //done-->
        <!--        TODO when referring a view don't use @+id //okay-->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview8_margin_top"
            android:fontFamily="@font/merriweathersans_medium"
            android:text="@string/textview8_sample_text"
            android:textColor="@color/white"
            android:textSize="@dimen/textview8_textSize"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>